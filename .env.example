# Copy this file to .env.local for local development.

# Required: passcode to create a new session
SESSION_CREATION_PASSCODE=change-me

# Optional: session lifetime in minutes (default 10)
SESSION_TTL_MINUTES=10

# Storage configuration
# Set to false to force local storage; otherwise uses GCS if configured
USE_GCS=true
# Required when using GCS
GCS_BUCKET=your-bucket-name

# Optional: days to keep the rememberâ€‘me cookie (default 30)
REMEMBER_DAYS=30

# Next.js telemetry (recommended to disable in CI/Prod)
NEXT_TELEMETRY_DISABLED=1

# Max file upload file size limit
MAX_UPLOAD_MB=100

# Optional runtime settings
# NODE_ENV=production
# PORT=8080

# Local development only: path to service account JSON
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

